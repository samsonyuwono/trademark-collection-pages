      }
      if($(this).is(":contains('Parent Center')")){
        $("<i class='fa fa-angle-down'></i>").appendTo($(this));
      }
      if($(this).is(":contains('About Us')")){
        $("<i class='fa fa-angle-down'></i>").appendTo($(this));
      }
    })



  })
</script>

