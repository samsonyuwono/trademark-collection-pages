        },
        {
          "type": "text",
          "id": "phone_number",
          "label": "Phone number",
          "default": "(333) 123 456"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email address",
          "default": "john@doe.com"
        }
      ]
    },
    {
