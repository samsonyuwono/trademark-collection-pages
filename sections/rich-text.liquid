<section class="section section-{{ section.id }}">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="section__title h3">{{ section.settings.title | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.text -%}
      <div class="rte" style="text-align: {{ section.settings.text_position }}">
        {{ section.settings.text }}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Text with optional image",
  "class": "shopify-section__featured-text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Rich text"
    }
  ]
}
{% endschema %}